@model List<TeacherModel>
<h1>Teacher Page</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Teacher" asp-action="Create">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>
               Name
            </th>
            <th>
                Designation
            </th>
            <th>
               Edit
            </th>
            <th>
               Delete
            </th>
            <th>
              Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td width="40%">
                    @teacher.Name
                </td>
                 <td width="60%">
                    @teacher.Designation
                </td>
                <td width="15%">
                    <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@teacher.Id"> Edit </a>
                </td >
                <td width="15%">
                    <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@teacher.Id"> Delete </a>

                </td>
                <td width="15%">
                    <a asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id"> Details </a>
                </td>
            </tr>
        }
    </tbody>
</table>



