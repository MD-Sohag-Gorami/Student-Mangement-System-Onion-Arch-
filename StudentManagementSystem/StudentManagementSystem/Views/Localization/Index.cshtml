@model List<Localization>


<h1>Localized Page</h1>
@*<a class="btn btn-primary" asp-area="" asp-controller="Localization" asp-action="Create">Create</a>*@

<table class="table">
    <thead>
        <tr>
            <th>
               Entity Name
            </th>
            <th>
                Property Name
            </th>
            <th>
               Value
            </th>
             <th>
               Edit
            </th>
            <th>
               Delete
            </th>
            <th>
              Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var localization in Model)
        {
            <tr>
                <td>
                    @localization.EntityName
                </td>
                 <td>
                    @localization.EntityPropertyName
                </td>
                 <td>
                    @localization.Value
                </td>
                <td>
                    <a asp-controller="Localization" asp-action="Edit" asp-route-id="@localization.Id"> Edit </a>
                </td>
                <td>
                    <a asp-controller="Localization" asp-action="Delete" asp-route-id="@localization.Id"> Delete </a>

                </td>
                <td>
                    <a asp-controller="Localization" asp-action="Detail" asp-route-id="@localization.Id"> Details </a>
                </td>
            </tr>
        }
    </tbody>
</table>



