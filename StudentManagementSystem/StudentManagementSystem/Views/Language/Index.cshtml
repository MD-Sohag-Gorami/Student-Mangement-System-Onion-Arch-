@model List<Language>
<h1>Language Page</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Language" asp-action="Create">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>
               Name
            </th>
            <th>
               Edit
            </th>
            <th>
               Delete
            </th>
            <th>
              Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var language in Model)
        {
            <tr>
                <td>
                    @language.Name
                </td>
                <td>
                    <a asp-controller="Language" asp-action="Edit" asp-route-id="@language.Id"> Edit </a>
                </td>
                <td>
                    <a asp-controller="Language" asp-action="Delete" asp-route-id="@language.Id"> Delete </a>

                </td>
                <td>
                    <a asp-controller="Localization" asp-action="Index" asp-route-id="@language.Id"> Details </a>
                </td>
            </tr>
        }
    </tbody>
</table>



